<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.elvea.platform.commons.persistence.mybatis.mapper.CommonMapper">

    <select id="getCurrentLocalDateTime" resultType="java.time.LocalDateTime">
        select now();
    </select>

    <select id="getCurrentLocalDate" resultType="java.time.LocalDate">
        select curdate();
    </select>

    <select id="getCurrentLocalTime" resultType="java.time.LocalTime">
        select curtime();
    </select>

</mapper>
